    <template id="report_employee_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="article o_report_layout_standard" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id">
<!--
                    <link rel="stylesheet" href="/openacademy/static/src/css/my_style.css"/>
-->
                    <div class="page">
                        <div class="row">
                            <div class="col-6">
                                <h2 t-field="doc.name"/>
                            </div>
<!--                            
                            <div class="col-6">
                                <img class="float-right" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', doc.name, 200, 200)"/>
                            </div>
-->                            
                        </div>
                        <p>Od <span t-field="doc.start_date"/> do <span t-field="doc.end_date"/></p>
                        <h3>Zaposleni:</h3>
<!--
                        <h4>No. of attendees: <t t-esc="doc.number_of_attendees()"/></h4>
-->
                        <table class="styled-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.employee_ids" t-as="employee">
                                    <td><span t-field="employee.name"/></td>
                                    <td><span t-field="employee.email"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

</odoo>